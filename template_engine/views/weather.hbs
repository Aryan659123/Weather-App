 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    {{>header_links}}
</head>
<body>


    <!-- Main Header Class -->
    {{>navbar}}
    
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class = "row">
                    <div class="main_content">
                        <form class="temp_form" >
                            <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                            <input type="submit" value="search" id="submitBtn">
                        </form>
                    </div>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Current Weather </p>
                        <p id="date"> 13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                    </div>
                    <div class="middle_layer data_hide">
                        <p id="temp"><span id="temp_real_val">0</span> <sup>o</sup> C</p>
                        <p id="temp_status">
                            <i class="fa fa-cloud" aria-hidden="true"></i>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="scripts/script.js"></script>

  {{>footer}}

</body>
</html>


